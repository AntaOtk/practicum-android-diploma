<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_parent_wrap_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_content_match_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:textColor">@color/my_button_text_color</item>
    </style>

</resources>
    <style name="HeadVacancyItem">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/header_item_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="contentVacancyItem">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/content_item_size</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="HeaderTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/header_item_size</item>
    </style>

    <style name="textStyle">
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="iconGravity">textStart</item>
        <item name="android:drawablePadding">9dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="placeHolderTextStyle">
            <item name="android:fontFamily">@font/ys_display_medium</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">@dimen/header_item_size</item>
    </style>

    <style name="SearchCountStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/content_item_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/search_count_background</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

</resources>
