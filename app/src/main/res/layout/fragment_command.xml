<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        style="@style/textStyle"
        android:id="@+id/toolbar_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_22"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/command"
        android:layout_marginStart="@dimen/dimens_16"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        style="@style/textStyle"
        android:id="@+id/text_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/who_make_this_app"
        android:textSize="@dimen/text_32"
        android:layout_marginStart="@dimen/dimens_16"
        android:layout_marginEnd="@dimen/dimens_16"
        android:layout_marginTop="@dimen/margin_35"
        android:fontFamily="@font/ys_display_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_settings"
        />

    <TextView
        style="@style/textStyle"
        android:id="@+id/text_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dev_1"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/text_main"
        app:layout_constraintTop_toBottomOf="@+id/text_main"
        />

    <TextView
        style="@style/textStyle"
        android:id="@+id/text_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dev_2"
        android:layout_marginTop="@dimen/dimens_16"
        app:layout_constraintStart_toStartOf="@+id/text_main"
        app:layout_constraintTop_toBottomOf="@+id/text_name1"
        />

    <TextView
        style="@style/textStyle"
        android:id="@+id/text_name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dev_3"
        android:layout_marginTop="@dimen/dimens_16"
        app:layout_constraintStart_toStartOf="@+id/text_main"
        app:layout_constraintTop_toBottomOf="@+id/text_name2"
        />

    <TextView
        style="@style/textStyle"
        android:id="@+id/text_name4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dev_4"
        android:layout_marginTop="@dimen/dimens_16"
        app:layout_constraintStart_toStartOf="@+id/text_main"
        app:layout_constraintTop_toBottomOf="@+id/text_name3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>