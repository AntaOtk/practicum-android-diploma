<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vacancy_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="9dp">

    <ImageView
        android:id="@+id/logo_rv"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/placeholder_32px"
        android:layout_marginEnd="12dp"
        android:background="@drawable/corner_shape"
        android:contentDescription="logo"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/head_vacancy_rv"
            style="@style/HeadVacancyItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Header" />

        <TextView
            android:id="@+id/employer_rv"
            style="@style/contentVacancyItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="employer" />

        <TextView
            android:id="@+id/salary_rv"
            style="@style/contentVacancyItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="salary" />
    </LinearLayout>

</LinearLayout>